@page "/roominfo"

<PageTitle>Hotel H2</PageTitle>

@inject Containers.RoomInfoStateContainer myStateContainer

<a href="roomlist"><p>←back</p></a>
<h3>Room @room.Id - @room.RoomType</h3>
<div id="container">
    
    <div class="slideshow-container">
        <button class="arrow arrow-left" @onclick="PreviousImage">&lt;</button>
        <img src="@room.Pictures[currentIndex].PictureURL" alt="Slideshow Image" />
        <button class="arrow arrow-right" @onclick="NextImage">&gt;</button>
    </div>
    <div>
        <h5>@room.Price Kr</h5>
        <h5>@room.MaxPeople person room</h5>
        <h5>availability: @room.VacancyToday</h5>
    </div>
</div>