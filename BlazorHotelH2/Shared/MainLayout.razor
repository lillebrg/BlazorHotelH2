@inherits LayoutComponentBase
@using Containers;
@using DomainModels;
@using BlazorHotelH2.Pages

<PageTitle>Hotel H2</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 header">
			

			@if (AccountSession.CustomerSession != null)
			{
				<h4 class="username">Hello @AccountSession.CustomerSession.UserName!</h4>
				<NavLink class="nav-link" href="/" @onclick="() => LogOut()">
				<span class="oi oi-person" aria-hidden="true"></span> Log ud
				</NavLink>
			}
			else if (AccountSession.AdminSession != null)
			{
				<h4>Hello @AccountSession.AdminSession.UserName!</h4>
				<NavLink class="nav-link" href="/" @onclick="() => LogOut()">
					<span class="oi oi-person" aria-hidden="true"></span> Log ud
				</NavLink>
			}
			else
			{
				<a class="button" href="signup">Sign up</a>
				<a class="button" href="login">Log in</a>
			}
        </div>

        <article>
            @Body
        </article>

        <footer>
			<div class="container p-4">
				<div class="row">
					<div class="col-lg-4 col-md-12 mb-4 mb-md-0">
						<h5 class="text-uppercase">Hotel info</h5>

						<p>
							H.C. Andersvej 10<br>
							DK-8800 Viborg<br>
						</p>
					</div>

					<div class="col-lg-4 col-md-12 mb-4 mb-md-0">
						<h5 class="text-uppercase">Kontakt info</h5>

						<p>
							Telefon +45 69 69 69 69<br>
							Mail info@hotelh2.com<br>
							CVR.nr. 360420
						</p>
					</div>

					<div class="col-lg-4 col-md-12 mb-4 mb-md-0">
						<h5 class="text-uppercase">Receptionen</h5>

						<p>
							Check-ind fra kl. 13:00 <br>
							Check-ud seneste kl. 10:00<br>
							Receptionen har åben fra 07.00 - 22.00
						</p>
					</div>

				</div>
			</div>
        </footer>
    </main>
</div>
