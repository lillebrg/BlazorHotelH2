<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
    
        <a class="navbar-brand" href="">Hotel H2</a>
        
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
    
        <div class="nav-item px-5">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-fill" aria-hidden="true"> Home </span>
            </NavLink>
        </div>

        <div class="nav-item px-5">
            <NavLink class="nav-link" href="hotel_info">
                <span class="bi bi-info-circle-fill" aria-hidden="true"> About </span>
            </NavLink>
        </div>

        <div class="nav-item px-5">
            <NavLink class="nav-link" href="rooms_info">
                <span class="bi bi-hospital-fill" aria-hidden="true"> Rooms </span>
            </NavLink>
        </div>

        <div class="nav-item px-5">
            <NavLink class="nav-link" href="resturant_info">
                <span class="bi bi-hospital-fill" aria-hidden="true"> Resturant </span>
            </NavLink>
        </div>

        <div class="nav-item px-5">
            <NavLink class="nav-link" href="events_info">
                <span class="bi bi-calendar-check-fill" aria-hidden="true"> Events </span>
            </NavLink>
        </div>
    
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
